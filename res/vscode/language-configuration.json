{
    "comments": {
        "lineComment": "#",
        "blockComment": [ "#[", "]#" ]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["{|", "|}"],
        ["[|", "|]"],
        ["(|", "|)"]
    ],
    "autoClosingPairs": [
        ["#[", "]#"],
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["{|", "|}"],
        ["[|", "|]"],
        ["(|", "|)"]
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["{|", "|}"],
        ["[|", "|]"],
        ["(|", "|)"],
        ["\"", "\""],
        ["`", "`"],
        ["'", "'"]
    ],
	"wordPattern": "(-?\\d*\\.\\d\\w*)|\\@?[A-Za-z_][A-Za-z0-9_-]*|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)"
}
